---
import ProjectCard from './projects/ProjectCard.astro';
import { projects } from '../data/projects';
---

<section id="projects" class="py-16 md:py-24 fade-in-section">
    <div class="container mx-auto px-4 max-w-6xl">
        <h2 class="text-3xl md:text-4xl font-bold mb-12 text-center text-[#8E24AA]">
            Proyectos Destacados
        </h2>
        <div class={`grid gap-8 ${projects.length === 1 ? 'grid-cols-1 max-w-2xl mx-auto' : projects.length === 2 ? 'grid-cols-1 md:grid-cols-2 max-w-4xl mx-auto' : 'grid-cols-1 md:grid-cols-2 lg:grid-cols-3'}`}>
            {projects.map((project) => (
                <ProjectCard project={project} />
            ))}
        </div>
    </div>
</section> 